<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white"
    android:id="@+id/layoutDisplay"
    tools:context=".view.activity.ChangePasswordActivity">
    <LinearLayout
        android:id="@+id/container_toolbar_change_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <include
                android:id="@+id/toolbarChangePassword"
                layout="@layout/toolbar_changepassword" />
        </LinearLayout>

       <android.support.v4.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="@dimen/_5dp"
               android:layout_marginRight="@dimen/_5dp"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_marginTop="@dimen/_20dp"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/_18sp"
                       android:id="@+id/txtOldPassword"
                       android:textColor="@color/md_black"
                       android:text="@string/OLD_PASSWORD_LABEL"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/_15sp"
                       android:layout_marginLeft="@dimen/_5dp"
                       android:textStyle="bold|italic"
                       android:textColor="@color/md_red_500"
                       android:text="(*)"/>
               </LinearLayout>
               <EditText
                   android:id="@+id/edtOldPassword"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_40dp"
                   android:layout_marginTop="@dimen/_10dp"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:paddingLeft="2dp"
                   android:inputType="textPassword"
                   android:textColor="@color/md_black"
                   android:background="@drawable/background_border_1dp"/>

               <LinearLayout
                   android:layout_marginTop="15dp"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/_18sp"
                       android:id="@+id/txtNewPassword"
                       android:textColor="@color/md_black"
                       android:text="@string/NEW_PASSWORD_LABEL"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/_15sp"
                       android:layout_marginLeft="@dimen/_5dp"
                       android:textStyle="bold|italic"
                       android:textColor="@color/md_red_500"
                       android:text="(*)"/>
               </LinearLayout>
               <EditText
                   android:id="@+id/edtNewPassword"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_40dp"
                   android:layout_marginTop="@dimen/_10dp"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:paddingLeft="2dp"
                   android:inputType="textPassword"
                   android:textColor="@color/md_black"
                   android:background="@drawable/background_border_1dp"/>

               <LinearLayout
                   android:layout_marginTop="15dp"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/_18sp"
                       android:id="@+id/txtConfirmPassword"
                       android:textColor="@color/md_black"
                       android:text="@string/CONFIRM_PASSWORD_LABEL"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/_15sp"
                       android:layout_marginLeft="@dimen/_5dp"
                       android:textStyle="bold|italic"
                       android:textColor="@color/md_red_500"
                       android:text="(*)"/>
               </LinearLayout>
               <EditText
                   android:id="@+id/edtConfirmPassword"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_40dp"
                   android:layout_marginTop="@dimen/_10dp"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:paddingLeft="2dp"
                   android:inputType="textPassword"
                   android:textColor="@color/md_black"
                   android:background="@drawable/background_border_1dp"/>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_20dp"
                   android:layout_marginLeft="@dimen/_100dp"
                   android:layout_marginRight="@dimen/_100dp"
                   android:id="@+id/btnUpdate"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textSize="@dimen/_18sp"
                   android:text="@string/UPDATE_BTN_LABEL"
                   android:background="@drawable/border_btn_change_password"/>

           </LinearLayout>
       </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
