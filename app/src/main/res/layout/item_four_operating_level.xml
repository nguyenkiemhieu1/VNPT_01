<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/_4dp"
    android:paddingBottom="@dimen/_4dp">

    <LinearLayout
        android:id="@+id/node_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8dp"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/node_image_view"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_16dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/node_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:fontFamily="monospace"
                android:gravity="center_vertical"
                android:text="Tree node name"
                android:textColor="@color/md_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/node_office_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:fontFamily="monospace"
                android:gravity="center_vertical"
                android:text="office"
                android:textColor="@color/md_black"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/node_email_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:fontFamily="monospace"
                android:gravity="center_vertical"
                android:text="Emails"
                android:textColor="@color/md_black"
                android:textSize="15sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkBoxPerson"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:buttonTint="@color/md_black" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>