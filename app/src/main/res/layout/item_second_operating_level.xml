<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/_4dp"
    android:paddingBottom="@dimen/_4dp">

    <LinearLayout
        android:id="@+id/node_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8dp"
            android:src="@drawable/ic_add" />
        <ImageView
            android:id="@+id/node_image_view"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_gravity="top"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginRight="@dimen/_16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/node_name_view"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:fontFamily="monospace"
                android:text="Tree node name"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/md_black"
                android:gravity="center_vertical"
                />
            <TextView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:id="@+id/node_office_view"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:fontFamily="monospace"
                android:text="office"
                android:textSize="15sp"
                android:textColor="@color/md_black"
                android:gravity="center_vertical"
                />
            <TextView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:id="@+id/node_email_view"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:fontFamily="monospace"
                android:text="Emails"
                android:textSize="15sp"
                android:textColor="@color/md_black"
                android:gravity="center_vertical"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkBoxPerson"
                android:buttonTint="@color/md_black"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>