<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/itemNotify">

    <LinearLayout
        android:id="@+id/layoutNotifyDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_anh_dai_dien"
            android:layout_width="@dimen/_56dp"
            android:layout_height="@dimen/_56dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>


        <CheckBox
            android:button="@drawable/custom_checkbox"
            android:layout_width="@dimen/_40dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginStart="@dimen/_8dp"
            android:id="@+id/checkNotify" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"

                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@color/md_black"
                    android:text="@string/NO_TITLE_NAME"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_blue_800"
                    android:textSize="@dimen/_14sp"
                    android:text="@string/NO_DATE"/>
                <TextView
                    android:id="@+id/txtDate2"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_red_500"
                    android:textSize="@dimen/_14sp"
                    android:text="@string/NO_TIME"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/md_grey_200"/>

</LinearLayout>