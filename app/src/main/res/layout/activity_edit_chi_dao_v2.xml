<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlCompat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbarDetail"
                layout="@layout/toolbar_edit_chidao" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_grey_100">

            <LinearLayout

                android:id="@+id/layoutDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="45dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/layoutDisplayStep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/background_border_1dp"
                        android:orientation="vertical">

                        <!--Bước 1 -->
                        <LinearLayout
                            android:id="@+id/layoutStep1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center_vertical"
                                    android:text="@string/tv_tieude_chidao"
                                    android:textColor="@color/md_black" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center_vertical"
                                    android:text=" *"
                                    android:textColor="@color/md_red_500" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/tv_tieude"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/background_border_radius"
                                android:fontFamily="@font/arial"
                                android:gravity="center_vertical"
                                android:maxLines="5"
                                android:minLines="2"
                                android:paddingLeft="5dp"
                                android:textColor="@color/md_black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/arial"
                                android:gravity="center_vertical"
                                android:text="@string/tv_noidung_chidao"
                                android:textColor="@color/md_black" />

                            <EditText
                                android:id="@+id/tv_noidung"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/background_border_radius"
                                android:fontFamily="@font/arial"
                                android:gravity="top"
                                android:maxLines="6"
                                android:minLines="6"
                                android:padding="5dp"
                                android:textColor="@color/md_black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_filedinhkem_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:fontFamily="@font/arial"
                                    android:text="@string/tv_file_dinh_kem"
                                    android:textColor="@color/md_black"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:drawableLeft="@drawable/ic_file_attach"
                                            android:fontFamily="@font/arial" />

                                        <TextView
                                            android:id="@+id/btnSelectFile"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="@font/arial"
                                            android:text="@string/tv_file_select"
                                            android:textColor="@color/colorTextBlue"
                                            android:textSize="18dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/layoutFile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="vertical"></LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!--Bước 2-->
                        <LinearLayout
                            android:id="@+id/layoutStep2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_border_1dp_grey"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/md_grey_200"
                                android:orientation="vertical"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/background_border"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/padding_6dp"
                                        android:src="@drawable/ic_search" />

                                    <EditText
                                        android:id="@+id/edtKeywordName"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:fontFamily="@font/arial"
                                        android:hint="@string/HINT_SEARCH"
                                        android:textColor="@color/md_black"
                                        android:textColorHint="@color/colorHint" />
                                </LinearLayout>

                                <Spinner
                                    android:id="@+id/sNhom"
                                    style="@style/spinner_style_radius"
                                    android:layout_width="match_parent"
                                    android:layout_height="39dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center_horizontal"
                                    android:paddingLeft="5dp"
                                    android:textColor="@color/md_black" />

                                <Spinner
                                    android:id="@+id/sDonViGui"
                                    style="@style/spinner_style_radius"
                                    android:layout_width="match_parent"
                                    android:layout_height="39dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center_horizontal"
                                    android:paddingLeft="5dp"
                                    android:textColor="@color/md_black" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtNoData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/arial"
                                android:gravity="center_vertical"
                                android:text="@string/tv_vuilong_doi"
                                android:textAlignment="center"
                                android:textColor="@color/md_black"
                                android:textSize="16dp" />

                            <android.support.v4.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:paddingBottom="10dp">

                                <LinearLayout
                                    android:id="@+id/layout_contact"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:orientation="vertical"></LinearLayout>
                            </android.support.v4.widget.NestedScrollView>
                        </LinearLayout>

                        <!--Bước 3-->
                        <LinearLayout
                            android:id="@+id/layoutStep3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/background_border_1dp_grey"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/background_border"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/padding_6dp"
                                    android:src="@drawable/ic_search" />

                                <EditText
                                    android:id="@+id/edtKeywordNameReceive"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:fontFamily="@font/arial"
                                    android:hint="@string/HINT_SEARCH"
                                    android:textColor="@color/md_black"
                                    android:textColorHint="@color/colorHint" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arial"
                                    android:text="@string/tv_gui_sms"
                                    android:textColor="@color/md_grey_800"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <CheckBox
                                    android:id="@+id/checkSMS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/md_grey_800" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutXuLyTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/background_border_top_blue"
                                android:orientation="horizontal"
                                android:padding="@dimen/padding_12dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/arial"
                                    android:text="@string/tv_ho_ten_dv"
                                    android:textColor="@color/md_white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.5"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="@string/tv_status"
                                    android:textColor="@color/md_white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:fontFamily="@font/arial"
                                    android:gravity="right"
                                    android:text="@string/tv_gui"
                                    android:textColor="@color/md_white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtNoDataReceive"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/arial"
                                android:gravity="center_vertical"
                                android:text="@string/NO_CONTACT"
                                android:textAlignment="center"
                                android:textColor="@color/md_black"
                                android:textSize="16dp"
                                android:visibility="gone" />
                            <!--<ScrollView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:paddingBottom="10dp">-->
                            <ListView
                                android:id="@+id/layout_receive"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"></ListView>
                            <!--</ScrollView>-->
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSaveDraft"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/border_btn_draft"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="@string/SAVE_DRAFT_BTN"
            android:textAllCaps="false"
            android:textColor="@color/md_grey_700" />

        <View
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/border_btn_search"
            android:fontFamily="@font/arial"
            android:text="@string/SELECT_PERSON_BTN"
            android:textAllCaps="false"
            android:textColor="@color/md_white" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutSavePerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnBackStep1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/border_btn_refresh"
            android:fontFamily="@font/arial"
            android:text="@string/BACK_BTN"
            android:textAllCaps="false"
            android:textColor="@color/md_white" />

        <View
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/btnSavePerson"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/border_btn_search"
            android:fontFamily="@font/arial"
            android:text="@string/SAVE_LABEL_BTN"
            android:textAllCaps="false"
            android:textColor="@color/md_white" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnBackStep2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/border_btn_refresh"
            android:fontFamily="@font/arial"
            android:text="@string/BACK_BTN"
            android:textAllCaps="false"
            android:textColor="@color/md_white" />

        <View
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/btnSendAll"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/border_btn_search"
            android:fontFamily="@font/arial"
            android:text="@string/SEND_ALL_BUTTON"
            android:textAllCaps="false"
            android:textColor="@color/md_white" />
    </LinearLayout>
</RelativeLayout>