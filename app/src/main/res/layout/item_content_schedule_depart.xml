<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLich"
    android:background="#fff">

    <TextView
        android:id="@+id/tieuDe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:textColor="@color/md_blue_500"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/thanhPhan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tiêu đề " />

    <ImageView
        android:id="@+id/textView"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@+id/diaDiem"
        app:layout_constraintStart_toStartOf="@+id/tieuDe"
        app:layout_constraintTop_toTopOf="@+id/diaDiem"  />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tieuDe"
        android:id="@+id/thanhPhan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:textColor="@color/md_black"
        app:layout_constraintBottom_toTopOf="@+id/diaDiem"
        app:layout_constraintEnd_toEndOf="@+id/tieuDe"
        app:layout_constraintStart_toEndOf="@+id/textView"
        tools:text="Thành phần\nfdhgvdfjhdfhb " />

    <ImageView
        app:layout_constraintTop_toTopOf="@+id/thanhPhan"
        android:id="@+id/textView2"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@+id/thanhPhan"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="@id/thanhPhan"/>

    <TextView
        android:id="@+id/diaDiem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/md_black"
        app:layout_constraintTop_toBottomOf="@id/thanhPhan"
        app:layout_constraintEnd_toEndOf="@+id/thanhPhan"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Địa điểm dgdfgdfgdfgdfg\nfhgfgfn\fghgfhgf\nfgh\fghn" />

</android.support.constraint.ConstraintLayout>