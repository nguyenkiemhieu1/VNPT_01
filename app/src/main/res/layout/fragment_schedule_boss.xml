<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_200"
    android:id="@+id/list_lichHop"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--chon thu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/md_cyan_500"
                android:paddingTop="@dimen/_6dp"
                android:paddingBottom="@dimen/_6dp">

                <TextView
                    android:id="@+id/thu2"
                    style="@style/color_lich_donvi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/md_cyan_500"
                android:paddingTop="@dimen/_6dp"
                android:paddingBottom="@dimen/_6dp">

                <TextView
                    android:id="@+id/thu3"
                    style="@style/color_lich_donvi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/md_cyan_500"
                android:paddingTop="@dimen/_6dp"
                android:paddingBottom="@dimen/_6dp">

                <TextView
                    android:id="@+id/thu4"
                    style="@style/color_lich_donvi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/md_cyan_500"
                android:paddingTop="@dimen/_6dp"
                android:paddingBottom="@dimen/_6dp">

                <TextView
                    android:id="@+id/thu5"
                    style="@style/color_lich_donvi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/md_cyan_500"
                android:paddingTop="@dimen/_6dp"
                android:paddingBottom="@dimen/_6dp">

                <TextView
                    android:id="@+id/thu6"
                    style="@style/color_lich_donvi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/md_cyan_500"
                android:paddingTop="@dimen/_6dp"
                android:paddingBottom="@dimen/_6dp">

                <TextView
                    android:id="@+id/thu7"
                    style="@style/color_lich_donvi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/md_cyan_500"
                android:paddingTop="@dimen/_6dp"
                android:paddingBottom="@dimen/_6dp">

                <TextView
                    android:id="@+id/chunhat"
                    style="@style/color_lich_donvi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CN" />
            </LinearLayout>

        </LinearLayout>

        <!--hien thi ngay-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:background="@color/md_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ngayHienTai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_6dp"
                    android:textColor="@android:color/black"
                    tools:text="NgÃ y 03/04/2019" />

                <ImageView
                    android:id="@+id/btnChonNgay"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/_12dp"
                    android:src="@drawable/ic_calendar" />

            </FrameLayout>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ln_lich"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvSang"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_sang"
                        android:padding="@dimen/_6dp"
                        android:textColor="@color/md_black"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_meeting_sang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp" />

                    <TextView
                        android:id="@+id/tvChieu"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_chieu"
                        android:padding="@dimen/_6dp"
                        android:textColor="@color/md_black"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_meeting_chieu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/lichNull"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/tv_khongco_lich"
                    android:textColor="@color/md_black"
                    android:padding="@dimen/_12dp"
                    android:gravity="center" />


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</FrameLayout>