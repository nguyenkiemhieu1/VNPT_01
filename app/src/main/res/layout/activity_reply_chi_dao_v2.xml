<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ReplyChiDaoActivity"
    android:orientation="vertical"
    tools:ignore="RtlCompat" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/toolbarDetail"
                layout="@layout/toolbar_send_chidao" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_grey_100">
            <LinearLayout
                android:id="@+id/layoutDisplay"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_border_1dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/step1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="top"
                                android:background="@color/md_grey_100"/>
                            <View
                                android:id="@+id/lineStep1"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorTextBlue"
                                android:layout_gravity="center"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:layout_gravity="bottom"
                                android:background="@color/md_white"/>
                            <ImageView
                                android:id="@+id/imgStep1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_step_1" />
                        </FrameLayout>
                        <TextView
                            android:id="@+id/txtStep1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:fontFamily="@font/arial"
                            android:textColor="@color/colorTextBlue"
                            android:background="@color/md_white"
                            android:text="Thông tin"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:background="@color/md_grey_100"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="67dp"
                            android:background="@color/md_white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/step2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="top"
                                android:background="@color/md_grey_100"/>
                            <View
                                android:id="@+id/lineStep2"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorLineGrey"
                                android:layout_gravity="center"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:layout_gravity="bottom"
                                android:background="@color/md_white"/>
                            <ImageView
                                android:id="@+id/imgStep2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_step_2_disable" />
                        </FrameLayout>
                        <TextView
                            android:id="@+id/txtStep2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/md_grey_600"
                            android:background="@color/md_white"
                            android:fontFamily="@font/arial"
                            android:text="Gán người dùng"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:background="@color/md_grey_100"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="67dp"
                            android:background="@color/md_white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/step3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="top"
                                android:background="@color/md_grey_100"/>
                            <View
                                android:id="@+id/lineStep3"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorLineGrey"
                                android:layout_gravity="center"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:layout_gravity="bottom"
                                android:background="@color/md_white"/>
                            <ImageView
                                android:id="@+id/imgStep3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_step_3_disable" />
                        </FrameLayout>
                        <TextView
                            android:id="@+id/txtStep3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/md_grey_600"
                            android:background="@color/md_white"
                            android:fontFamily="@font/arial"
                            android:text="Gửi thông báo"/>
                    </LinearLayout>
                </LinearLayout>
                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:layout_marginBottom="45dp">
                    <LinearLayout
                        android:id="@+id/layoutDisplayStep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/background_border_1dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:visibility="visible"
                            android:id="@+id/layoutStep1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_tieude_chidao"
                                    android:textColor="@color/md_black"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center_vertical"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=" *"
                                    android:fontFamily="@font/arial"
                                    android:textColor="@color/md_red_500"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"/>
                            </LinearLayout>
                            <EditText
                                android:layout_marginTop="5dp"
                                android:id="@+id/tv_tieude"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minLines="2"
                                android:maxLines="5"
                                android:textColor="@color/md_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="5dp"
                                android:fontFamily="@font/arial"
                                android:gravity="center_vertical"
                                android:background="@drawable/background_border_radius"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_noidung_chidao"
                                android:textColor="@color/md_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/arial"/>
                            <EditText
                                android:layout_marginTop="5dp"
                                android:id="@+id/tv_noidung"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/md_black"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:maxLines="6"
                                android:minLines="6"
                                android:gravity="top"
                                android:fontFamily="@font/arial"
                                android:padding="5dp"
                                android:background="@drawable/background_border_radius"/>
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_filedinhkem_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_file_dinh_kem"
                                    android:textSize="16dp"
                                    android:fontFamily="@font/arial"
                                    android:textColor="@color/md_black"
                                    android:layout_gravity="top"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:fontFamily="@font/arial"
                                            android:drawableLeft="@drawable/ic_file_attach"/>
                                        <TextView
                                            android:id="@+id/btnSelectFile"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorTextBlue"
                                            android:layout_gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/arial"
                                            android:text="@string/tv_file_select"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view_file_upload"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutStep2"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/background_border_1dp_grey">
                            <LinearLayout
                                android:background="@color/md_grey_200"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:background="@drawable/background_border"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp">
                                    <ImageView
                                        android:layout_marginLeft="@dimen/padding_6dp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_search"/>
                                    <EditText
                                        android:hint="@string/HINT_SEARCH"
                                        android:textColorHint="@color/colorHint"
                                        android:textColor="@color/md_black"
                                        android:id="@+id/edtKeywordName"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:fontFamily="@font/arial"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="3dp"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                <Spinner
                                    android:id="@+id/sNhom"
                                    style="@style/spinner_style_radius"
                                    android:layout_width="match_parent"
                                    android:layout_height="39dp"
                                    android:textColor="@color/md_black"
                                    android:paddingLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center_horizontal"/>
                                <Spinner
                                    android:id="@+id/sDonViGui"
                                    style="@style/spinner_style_radius"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/md_black" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/txtNoData"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textColor="@color/md_black"
                                android:textAlignment="center"
                                android:textSize="16dp"
                                android:fontFamily="@font/arial"
                                android:text="@string/tv_vuilong_doi"
                                />
                            <android.support.v4.widget.NestedScrollView
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fillViewport="true"
                                android:paddingBottom="10dp">
                                <LinearLayout
                                    android:id="@+id/layout_contact"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp">
                                </LinearLayout>
                            </android.support.v4.widget.NestedScrollView>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/layoutStep3"
                            android:background="@drawable/background_border_1dp_grey"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:background="@drawable/background_border"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="45dp">
                                <ImageView
                                    android:layout_marginLeft="@dimen/padding_6dp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_search"/>
                                <EditText
                                    android:hint="@string/HINT_SEARCH"
                                    android:textColorHint="@color/colorHint"
                                    android:textColor="@color/md_black"
                                    android:id="@+id/edtKeywordNameReceive"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:fontFamily="@font/arial"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:layout_gravity="right"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_gui_sms"
                                    android:fontFamily="@font/arial"
                                    android:textColor="@color/md_grey_800"
                                    android:textStyle="bold"
                                    android:textSize="14sp"/>
                                <CheckBox
                                    android:id="@+id/checkSMS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/md_grey_800" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/layoutXuLyTitle"
                                android:background="@drawable/background_border_top_blue"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_12dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp">
                                <TextView
                                    android:fontFamily="@font/arial"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:text="@string/tv_ho_ten_dv"
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:textColor="@color/md_white"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:fontFamily="@font/arial"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:text="@string/tv_status"
                                    android:layout_width="0dp"
                                    android:layout_weight="2.5"
                                    android:gravity="center"
                                    android:textColor="@color/md_white"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:fontFamily="@font/arial"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:text="@string/tv_gui"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:gravity="right"
                                    android:textColor="@color/md_white"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/txtNoDataReceive"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textColor="@color/md_black"
                                android:textAlignment="center"
                                android:textSize="16dp"
                                android:fontFamily="@font/arial"
                                android:text="@string/NO_CONTACT"/>
                            <!--<ScrollView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:paddingBottom="10dp">-->
                            <ListView
                                android:id="@+id/layout_receive"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp">
                            </ListView>
                            <!--</ScrollView>-->
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutSave"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:id="@+id/btnSend"
            android:text="@string/SEND_BUTTON"
            android:fontFamily="@font/arial"
            android:textColor="@color/md_white"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:background="@drawable/border_btn_search"/>
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:id="@+id/btnSave"
            android:text="@string/SELECT_ADD_PERSON_BTN"
            android:textColor="@color/md_white"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/arial"
            android:textAllCaps="false"
            android:background="@drawable/border_btn_search"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutSavePerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:id="@+id/btnBackStep1"
            android:text="@string/BACK_BTN"
            android:fontFamily="@font/arial"
            android:textColor="@color/md_white"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:background="@drawable/border_btn_refresh"/>
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:id="@+id/btnSavePerson"
            android:text="@string/SAVE_LABEL_BTN"
            android:textColor="@color/md_white"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/arial"
            android:textAllCaps="false"
            android:background="@drawable/border_btn_search"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutSend"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:id="@+id/btnBackStep2"
            android:text="@string/BACK_BTN"
            android:fontFamily="@font/arial"
            android:textColor="@color/md_white"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:background="@drawable/border_btn_refresh"/>
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btnSendAll"
            android:text="@string/SEND_ALL_BUTTON"
            android:fontFamily="@font/arial"
            android:textColor="@color/md_white"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:background="@drawable/border_btn_search"/>
    </LinearLayout>
</RelativeLayout>