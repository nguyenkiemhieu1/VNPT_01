<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_unit_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center|left"
            tools:text="Don vi "
            android:textSize="@dimen/_13sp"
            android:textColor="@color/md_black" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="12/07/2019"
            android:textSize="@dimen/_13sp"
            android:id="@+id/tv_end_date"
            android:layout_width="0dp"
            android:padding="@dimen/_3dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/background_border_radius"
            android:drawableRight="@drawable/ic_date_chidao"
            android:textColor="@color/md_black" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/iv_delete"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_3dp"
            android:layout_marginBottom="@dimen/_3dp"
            android:text="@string/tv_xoa"
            fancy:fb_fontIconResource="@string/text_icon_delete"
            fancy:fb_iconPosition="left"
            android:textSize="@dimen/_13sp"
            fancy:fb_defaultColor="@color/md_blue_a700"
            fancy:fb_radius="@dimen/_5dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/md_black"
        android:paddingTop="@dimen/_8dp" />
</LinearLayout>
