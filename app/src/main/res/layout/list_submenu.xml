<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25dp"
        android:layout_marginLeft="@dimen/_30dp"
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iconsubimage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@color/icon_child"/>

        <TextView
            android:id="@+id/submenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/_15sp"
            android:layout_weight="1"
            android:textColor="@color/text_child" />
        <TextView
            android:visibility="visible"
            android:id="@+id/number_Doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="@dimen/_2dp"
            android:paddingEnd="@dimen/_2dp"
            android:textColor="@color/md_white"
            android:textSize="11sp"
            android:text="123"
            android:background="@drawable/circle_textview_red"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/_5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_22dp"
        android:background="@color/md_grey_200"/>
</LinearLayout>
