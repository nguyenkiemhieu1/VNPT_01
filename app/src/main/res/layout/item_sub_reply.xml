<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/md_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_8dp"
    android:paddingTop="@dimen/_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white">
            <ImageView
                android:id="@+id/img_anh_dai_dien"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/ic_avatar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/background_reply"
                    android:paddingLeft="@dimen/_5dp"
                    android:paddingRight="@dimen/_5dp"
                    android:paddingTop="@dimen/_5dp"
                    android:paddingBottom="@dimen/_5dp">
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold"
                        android:textColor="@color/md_grey_900"
                        android:textSize="14sp"
                        tools:text="Vũ Trung Hiếu - Phó GĐ"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/arial"
                            android:textSize="12sp"
                            android:textColor="@color/md_grey_700"
                            tools:text="06/06/2018 10:28:29"/>
                        <ImageView
                            android:id="@+id/btnFile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:src="@drawable/ic_link_black_24dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold"
                        android:textColor="@color/md_grey_900"
                        android:textSize="14sp"
                        tools:text="TL: Dự toán kinh phí tập huấn VNPT-IOFFICE 4.0 của sở"/>
                    <TextView
                        android:id="@+id/txtContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textSize="14sp"
                        android:textColor="@color/md_grey_900"
                        tools:text="Đồng ký với bản dự toán kinh phí, các phòng Ban liên quan chủ động phối hợp."/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/_8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/btnForward"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:textSize="14sp"
                                android:textColor="@color/md_grey_600"
                                android:text="@string/tv_chuyentiep"
                                android:drawableLeft="@drawable/ic_forward"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btnReply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:textSize="14sp"
                                android:textColor="@color/md_grey_600"
                                android:text="@string/tv_traloi"
                                android:drawableLeft="@drawable/ic_reply"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btnReplyAll"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="right"
                            android:gravity="right">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:fontFamily="@font/arial"
                                android:textSize="14sp"
                                android:textColor="@color/md_grey_600"
                                android:drawableLeft="@drawable/ic_reply_all"
                                android:text="@string/tv_traloi_tatca"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white">
            <ImageView
                android:layout_width="120px"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_5dp"
                    android:paddingRight="@dimen/_5dp"
                    android:paddingTop="@dimen/_5dp"
                    android:paddingBottom="@dimen/_5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textSize="14sp"
                        android:background="@color/md_white"
                        android:textColor="@color/md_grey_700"
                        android:drawableLeft="@drawable/ic_list_receive"
                        android:text="@string/tv_guitoi" />
                    <TextView
                        android:id="@+id/txtNguoiNhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textSize="14sp"
                        android:background="@color/md_white"
                        android:textColor="@color/md_grey_900"
                        android:layout_marginLeft="@dimen/_5dp"
                        tools:text="Bạn và 10 người khác"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutSubReply"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:id="@+id/rvReplys"/>
    </LinearLayout>
</LinearLayout>