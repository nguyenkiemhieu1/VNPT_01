<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_3dp"
    android:paddingLeft="@dimen/_3dp"
    android:gravity="center"
    android:paddingRight="@dimen/_3dp"
    android:id="@+id/itemAttackFile">
    <ImageView
        android:id="@+id/ic_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_file"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sp"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="@dimen/_3dp"
            android:textColor="@color/colorPrimary"
            tools:text="pdf file"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sp"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="@dimen/_3dp"
            android:textColor="@color/md_grey_700"
            tools:text="pdf file"/>

    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/btn_ca_server_file"
        android:layout_width="@dimen/_48dp"
        android:layout_height="@dimen/_48dp"
        android:src="@drawable/icon_ca_sign_service"
        />
    <ImageView
        android:visibility="gone"
        android:id="@+id/btn_server_file"
        android:layout_width="@dimen/_48dp"
        android:layout_height="@dimen/_48dp"
        android:layout_marginStart="@dimen/_8dp"
        android:src="@drawable/icon_sign_service"
        />
    <ImageView
        android:visibility="gone"
        android:layout_marginStart="@dimen/_8dp"
        android:id="@+id/btn_pki_file"
        android:layout_width="@dimen/_48dp"
        android:layout_height="@dimen/_48dp"
        android:src="@drawable/icon_mobile_pki"
        />
</LinearLayout>