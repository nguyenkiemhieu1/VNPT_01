<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.DetailDocumentNotifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbarDetail"
                layout="@layout/toolbar_detail_document_notification" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_grey_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_trichyeu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_5dp"
                                android:text="@string/tv_trichyeu"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:paddingTop="@dimen/_3dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_18sp"
                                android:textStyle="bold"
                                tools:text="Ban hanh quy che dam bao an toan thong tin trong hoat dong ung dung cong nghe thong tin" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_cqbh_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_cqbh"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_cqbh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="VNPT Software" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_so_ki_hieu_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_sokyhieu"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_kh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_red_500"
                                android:textSize="@dimen/_16sp"
                                tools:text="123/VNP" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_ngayden_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_ngayden"
                                    android:textColor="@color/colorTextGrey"
                                    android:textSize="@dimen/_16sp" />

                                <TextView
                                    android:id="@+id/tv_ngayden"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_5dp"
                                    android:textColor="@color/md_black"
                                    android:textSize="@dimen/_16sp"
                                    tools:text="12/05/2017" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_ngayvb_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_ngay_vb"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_ngayvb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="19/05/2017" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_hinhthucvb_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_hinhthucvb"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_hinhthucvb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="Công văn" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5dp"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:textSize="@dimen/_16sp">

                                <TextView
                                    android:id="@+id/tv_sovb_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_sovanban"
                                    android:textColor="@color/colorTextGrey"
                                    android:textSize="@dimen/_16sp" />

                                <TextView
                                    android:id="@+id/tv_sovb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_5dp"
                                    android:text="GP CQĐT"
                                    android:textColor="@color/md_black"
                                    android:textSize="@dimen/_16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/_5dp">

                                <TextView
                                    android:id="@+id/tv_soden_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_soden"
                                    android:textColor="@color/colorTextGrey"
                                    android:textSize="@dimen/_16sp" />

                                <TextView
                                    android:id="@+id/tv_soden"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_5dp"
                                    android:text="150"
                                    android:textColor="@color/md_black"
                                    android:textSize="@dimen/_16sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_do_khan_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_do_khan"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_do_khan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_red_500"
                                android:textSize="@dimen/_16sp"
                                tools:text="Thường mật" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_hanxuly_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_hanxuly"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_hanxuly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="21/05/2017" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_sotrang_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_sotrang"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_sotrang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:text="01"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_hinhthucgui_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_hinhthucgui"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_hinhthucgui"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:text="Hệ thống QLVB"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutFileDK"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_filedinhkem_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_file_dinh_kem"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/layout_file_attach"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:orientation="vertical"
                            android:padding="@dimen/_8dp"></android.support.v7.widget.RecyclerView>

                        <Button
                            android:id="@+id/btnMark"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_btn_search"
                            android:fontFamily="@font/arial"
                            android:text="@string/tv_danhdau"
                            android:textAllCaps="false"
                            android:textColor="@color/md_white" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_16dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:background="@color/md_grey_200" />

                        <LinearLayout
                            android:id="@+id/layoutVanBan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_vblienquan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8dp"
                                android:text="@string/tv_vb_lienquan"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/layout_related_docs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_5dp"></LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_8dp">

                            <LinearLayout
                                android:id="@+id/layout_file_related"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:orientation="vertical"></LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_comment_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_tonghop_y_kien"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8dp"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
