<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_list"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/_8dp"
    android:paddingTop="@dimen/_8dp"
    android:layout_marginTop="@dimen/_5dp">

    <LinearLayout
        android:id="@+id/itemDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorTextRed"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold"
                    tools:text="12:34" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:gravity="center"
                    android:textColor="@color/md_black"
                    tools:text="12/05/2017" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/_5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_6dp"
                android:textColor="@color/colorTextBlue"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Ban hanh quy che dam bao an toan thong tin trong hoat dong ung dung cong nghe thong tin" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_trang_thai_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_trangthai"
                    android:textColor="@color/colorTextGrey" />

                <TextView
                    android:id="@+id/tv_trang_thai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black"
                    tools:text="Mới chưa xem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_kh_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_kh"
                    android:textColor="@color/colorTextGrey" />

                <TextView
                    android:id="@+id/tv_kh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black"
                    tools:text="123" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cqbh_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_cqbh"
                    android:textColor="@color/colorTextGrey" />

                <TextView
                    android:id="@+id/tv_cqbh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5dp"
                    android:textColor="@color/md_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="VNPT Software" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ngay_vb_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ngay_vb"
                    android:textColor="@color/colorTextGrey" />

                <TextView
                    android:id="@+id/tv_ngay_vb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlue"
                    tools:text="11/12/2017" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_do_khan_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_do_khan"
                    android:textColor="@color/colorTextGrey" />

                <TextView
                    android:id="@+id/tv_do_khan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextRed"
                    tools:text="Thường mật" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_file_attach_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_file_dinh_kem"
                    android:textColor="@color/colorTextGrey" />

                <ImageView
                    android:id="@+id/img_file_dinh_kem"
                    android:layout_width="@dimen/_36dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_link_black_24dp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:paddingBottom="@dimen/_8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_more" />

    </LinearLayout>


</LinearLayout>