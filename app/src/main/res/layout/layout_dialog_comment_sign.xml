<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/md_white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/md_blue_800">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/str_noi_dung_y_kien"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/_18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_noidung_chidao"
            android:textColor="@color/md_black"/>
        <EditText
            android:id="@+id/edt_content_sign"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/background_border_1dp"
            android:layout_width="match_parent"
            android:padding="@dimen/_5dp"
            android:textColor="@color/md_black"
            android:layout_height="@dimen/_96dp" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ngay_het_han"
            android:textColor="@color/md_black"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/background_border_1dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDateSign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/md_black"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:src="@drawable/ic_calendar"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/_18dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btn_ca_server_file"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/icon_ca_sign_service"
                />
            <ImageView
                android:id="@+id/btn_server_file"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="@dimen/_8dp"
                android:src="@drawable/icon_sign_service"
                />
            <ImageView
                android:layout_marginLeft="@dimen/_12dp"
                android:id="@+id/btn_pki_file"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="@dimen/_8dp"
                android:src="@drawable/icon_mobile_pki"
                />
            <ImageView
                android:layout_marginLeft="@dimen/_12dp"
                android:id="@+id/btn_cancel"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/icon_sign_cancel"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>